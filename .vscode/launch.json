  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'example_game'",
      "cargo": {
        "args": [
          "build",
          "--bin=example_game"
        ],
        "filter": {
          "name": "example_game",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'build_web'",
      "cargo": {
        "args": [
          "build",
          "--bin=build_web"
        ],
        "filter": {
          "name": "build_web",
          "kind": "bin"
        }
      },
      "args": ["--release", "--bin", "example_game"],
      "cwd": "${workspaceFolder}"
    },
  ]
}